extends layout

block content
    div(class="container-fluid")
        div(class="row")
            div(class="col-sm-3")
                h2 Recherche
                form(method='GET' action='' id='form-arrondissement')
                    div(class="form-group" class="col-form-label")
                        label(for='arrondissement') Par arrondissement
                        input(type='text' class="form-control" id="field-arrondissement" placeholder='Arrondissement')
                        button(id='submitArrondissement' class="btn btn-primary") Submit
                form(method='GET' action='' id="form-nom")
                    div(class="form-group")
                        label(for='nom') Par nom d'installation
                        select(id='installations')
                            each value,key in installations
                                option(value=key  id='field-nom') #{value}
                        button(id='submitNom' class="btn btn-primary") Submit
            div(class="col-sm-8")
                div(class="container")
                    table(id="myTable" class="table table-striped table-hover")
                        thead
                            tr
                            tr
                                th Nom
                                th Adresse
                                th Arrondissement
                                th Type
                                th Condition
                        tbody(id='table-content')
                            tr
                                td Nothing to show here...
                                td
                                td
                                td
                                td
