extends layout

block content
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    script(src="javascripts/scripts.js")
    div.content
        h1= title
        div.form-content
            h2 Recherche
            form(method='GET' action='' id='form-arrondissement')
                lu
                    li
                        label(for='arrondissement') Par arrondissement
                        input.form-control(type='search' id="field-arrondissement" placeholder='Arrondissement')
                    li
                        button.btn.btn-primary(id='submitArrondissement') Submit
            form(method='GET' action='' id="form-nom")
                    li 
                        label(for='nom') Par nom d'installation
                        select(id='installations')
                            each installation in installations
                                option(value=installation  id='field-nom') #{installation}
                    li
                        button.btn.btn-primary(id='submitNom') Submit
        div.table-content
            table(id="myTable")
                thead
                    tr
                    tr
                        th Nom
                        th Adresse
                        th Arrondissement
                        th Type
                        th Condition
                tbody(id='table-content')
                        td Nothing to show here...
                        td
                        td
                        td
                        td
